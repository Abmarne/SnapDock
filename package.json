{
  "name": "snapdock",
  "version": "2.0.1",
  "buildStage": "Beta",
  "releaseDate": "2025-12-10",
  "description": "SnapDock â€” lightweight markdown editor with file tree, recent files, and dynamic preview.",
  "author": "ZetoLabs",
  "update": {
    "repo": "https://github.com/ZFordDev/SnapDock",
    "assets": {
      "bundle": "https://github.com/ZFordDev/SnapDock/releases/latest/download/bundle.js",
      "html": "https://github.com/ZFordDev/SnapDock/releases/latest/download/index.html",
      "css": "https://github.com/ZFordDev/SnapDock/releases/latest/download/styles.css"
    }
  },
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "bundle": "node build.js", 
    "pack": "electron-packager . SnapDock --platform=win32 --arch=x64 --out=dist --icon=assets/icon.ico",
    "build": "npm run bundle && electron-builder",
    "lint": "echo \"Add ESLint later\""
  },
  "dependencies": {
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.27.1",
    "rcedit": "^5.0.2"
  },
  "build": {
    "appId": "com.zetolabs.snapdock",
    "productName": "SnapDock",
    "files": [
      "dist/**/*",
      "index.html",
      "src/styles.css",
      "assets/**/*",
      "main.js",
      "src/preload.js"
    ],
    "win": {
      "icon": "assets/icon.ico"
    }
  }
}
